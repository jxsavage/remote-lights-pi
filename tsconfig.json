{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "ES2019"
    ],
    "baseUrl": "./src",
    "paths": {
      "Shared/*": [
        "Shared/*"
      ],
      "SocketClient/*": [
        "SocketClient/*"
      ],
      "SocketServer/*": [
        "SocketServer/*"
      ],
      "MicroController/*": [
        "MicroController/*"
      ]

    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ]
}
